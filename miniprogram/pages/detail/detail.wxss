.detail-container {
  height: 400rpx;
  filter: blur(40rpx);
  opacity: 0.4;
}

.detail-mask {
  position: absolute;
  width: 100%;
  height: 400rpx;
  background-color: #333;
  top: 0;
  left: 0;
  z-index: -1;
}

.detail-img {
  width: 280rpx;
  height: 90%;
  margin-right: 24rpx;
}

.detail-info {
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 400rpx;
  padding: 20rpx;
}

.detail {
  flex-grow: 1;
  line-height: 50rpx;
}

.detail view {
  color: #fff;
  font-size: 24rpx;
}

.detail .detail-nm {
  font-size: 40rpx;
  font-weight: 700;
  padding-right: 20rpx;
}

.detail-onm {
  padding-right: 20rpx;
}

.detail-rating {
  display: flex;
  padding-right: 200rpx;
  align-items: baseline;
}

.detail.sc {
  color: #fc0;
  font-size: 36rpx;
  font-weight: 700;
}

/***************  简介  ***************/

.desc {
  padding: 20rpx 20rpx 50rpx 20rpx;
  border-bottom: 1rpx solid #e6e6e6;
}

.desc-text {
  text-align: justify;
  color: #555;
  font-size: 30rpx;
  line-height: 50rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.desc-text.hide {
  -webkit-line-clamp: 3;
}

.desc-text.show {
  -webkit-line-clamp: 0;
}

.desc-state {
  color: #1296db;
  font-size: 30rpx;
  padding-top: 10rpx;
  float: right;
}

