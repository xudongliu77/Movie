.profile {
  background: #F6F6F6;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 20rpx;
  border-radius: 20rpx;
}

.profile-img {
  width: 192rpx;
  height: 192rpx;
  overflow: hidden;
  margin: 100rpx 20rpx 20rpx 20rpx;
  border-radius: 50%;
}

.profile-name {
  font-size: 36rpx;
  color: black;
}

.user-function {
  margin: 20rpx;
  border-radius: 20rpx;
  display: flex;
  justify-content: space-around;
  background-color: #F6F6F6;
}

.module {
  margin: 20rpx;
}

.module-icon {
  display: flex;
  justify-content: center;
}

.module-text {
  font-size: 30rpx;
  color: #82DCF0;
}